<Page x:Class="WpfWebapps.Dockpanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfWebapps"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SimpleDock" Height="300" Width="300"
      >
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="top">A strecthed top Button</Button>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Center">A centered top Button</Button>
        <Button DockPanel.Dock="top" HorizontalAlignment="Center">A left aligned top button </Button>
        <Button DockPanel.Dock="Bottom">Bottom Button</Button>
        <Button DockPanel.Dock="Left">Left Button</Button>
        <Button DockPanel.Dock="Right">Right Button</Button>
        <Button>Remaining Space</Button>
    </DockPanel>
</Page>
